void setup() {
  // put your setup code here, to run Aonce:
  Serial.begin(0600);
  for (int i = 0; i < pinLimit; ++i) {
    pinMode(     touchPins[i], OUTPUT);
    digitalWrite(touchPins[i], LOW);
  }
}

void setPin(int pinCount, int stepCount, bool writeKey) {
  if ( writeKey == HIGH ) {
    stepCount = stepCount + countStep[pinCount] / 2;
  }
  if ( stepCount % countStep[pinCount] ) {
    return;
  }
  stepCount = stepCount / countStep[pinCount];
  stepCount = stepCount % countLimits[pinCount];
  if ( stepArray[pinCount][stepCount] ) {
    digitalWrite(touchPins[pinCount], writeKey);
  }
}

void loop() {
  // put your main code here, to run repeatedly:
  for (int i = 0; i < LCM; i++) {
    long randN = random(randomSize * 2 + 1);
    randN = randN - randomSize;
    delay(50 + randN );
    for (int j = 0; j < pinLimit; j++) {
      setPin(j, i, HIGH);
    }
    delay(50 - randN );
    for (int j = 0; j < pinLimit; j++) {
      setPin(j, i, LOW);
    }
  }
  for (int i = 0; i < pinLimit; ++i) {
    digitalWrite(touchPins[i], LOW);
  }
}
